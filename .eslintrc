{
  "parser": "babel-eslint",
  "extends": [
    "plugin:flowtype/recommended",
    "airbnb"
  ],
  "rules": {
    "no-console": "off",
    "class-methods-use-this": "off",
    "max-len": "off",
    "no-underscore-dangle": "off",
    "react/prefer-stateless-function": "off",
    "react/sort-comp": "off",
    "semi": ["warn", "never"]
  },
  "plugins": [
    "import",
    "react",
    "lodash",
    "flowtype"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}
